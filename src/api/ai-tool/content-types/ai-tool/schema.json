{
  "kind": "collectionType",
  "collectionName": "ai_tools",
  "info": {
    "singularName": "ai-tool",
    "pluralName": "ai-tools",
    "displayName": "AI Tool",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "toolName": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "toolImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "developers": {
      "type": "string"
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "toolTags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tool-tag.tool-tag",
      "inversedBy": "aiTools"
    },
    "webToolLink": {
      "type": "string",
      "regex": "^(https?|ftp)://[^\\s/$.?#].[^\\s]*$"
    },
    "githubLink": {
      "type": "string",
      "regex": "^(https?|ftp)://[^\\s/$.?#].[^\\s]*$"
    },
    "localAppLink": {
      "type": "string",
      "regex": "^(https?|ftp)://[^\\s/$.?#].[^\\s]*$"
    },
    "internalInfo": {
      "type": "richtext"
    },
    "softwareLink": {
      "type": "string",
      "regex": "^(https?|ftp)://[^\\s/$.?#].[^\\s]*$"
    },
    "googleCollabLink": {
      "type": "string",
      "regex": "^(https?|ftp)://[^\\s/$.?#].[^\\s]*$"
    }
  }
}
